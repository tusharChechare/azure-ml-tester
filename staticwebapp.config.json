{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/_next/*", "/api/*", "/*.{css,js,json,ico,png,jpg,svg,woff,woff2}"]
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Cache-Control": "public, max-age=3600"
      }
    }
  ],
  "globalHeaders": {
    "Cache-Control": "public, max-age=3600"
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
